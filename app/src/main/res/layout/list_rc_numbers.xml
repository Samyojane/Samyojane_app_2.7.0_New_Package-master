<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#FDF4B9">

    <TableLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        tools:ignore="UselessParent">
        <TableRow>
            <TextView
                android:id="@+id/tvSl_No"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="@string/sl"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/tvRCNum"
                android:layout_width="185dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="@string/ration_card_num"
                android:textColor="@android:color/black" />

            <Button
                android:id="@+id/btnEdit"
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:text="@string/view"
                android:background="@drawable/button_background"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvDistCode_ass"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tvTalukCode_ass"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tvHobCode_ass"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tvuName_get"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:visibility="gone"/>
        </TableRow>
    </TableLayout>
</LinearLayout>

