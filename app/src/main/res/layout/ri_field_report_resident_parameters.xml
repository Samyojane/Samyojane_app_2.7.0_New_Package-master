                            android:layout_column="1"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/colon"
                            android:textSize="20sp"
                            android:textColor="@color/colorPrimaryDark"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:layout_marginStart="5dp"
                            android:layout_column="2"/>
                        <TextView
                            android:id="@+id/tvVillageName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="4dp"
                            android:layout_column="3"/>
                    </TableRow>

                    <TableRow
                        android:layout_marginTop="5dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/applicant_id"
                            android:textColor="@android:color/black"
                            android:layout_column="1"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/colon"
                            android:textSize="20sp"
                            android:textColor="@color/colorPrimaryDark"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:layout_marginStart="5dp"
                            android:layout_column="2"/>
                        <TextView
                            android:id="@+id/ApplicantID"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="4dp"
                            android:layout_column="3"/>
                    </TableRow>
                    <TableRow
                        android:layout_marginTop="5dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/applicant_name"
                            android:textColor="@android:color/black"
                            android:layout_column="1"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/colon"
                            android:textSize="20sp"
                            android:textColor="@color/colorPrimaryDark"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:layout_marginStart="5dp"
                            android:layout_column="2"/>
                        <TextView
                            android:id="@+id/ApplicantName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_column="3"/>
                    </TableRow>
                    <TableRow
                        android:layout_marginTop="5dp">

                        <TextView
                            android:id="@+id/txt5"
                            android:layout_width="120sp"
                            android:layout_height="wrap_content"
                            android:layout_column="1"
                            android:text="@string/address"
                            android:textColor="@android:color/black"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/colon"
                            android:textSize="20sp"
                            android:textColor="@color/colorPrimaryDark"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:layout_marginStart="5dp"
                            android:layout_column="2"/>
                        <TextView
                            android:id="@+id/txt_add1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:layout_marginStart="5dp"
                            android:layout_column="3" />

                    </TableRow>
                    <TableRow
                        android:layout_marginTop="5dp">
                        <TextView
                            android:id="@+id/txt_add2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:layout_marginStart="10dp"
                            android:layout_column="3" />
                    </TableRow>
                    <TableRow
                        android:layout_marginTop="5dp">
                        <TextView
                            android:id="@+id/txt_add3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:layout_marginStart="10dp"
                            android:layout_column="3" />

                    </TableRow>
                    <TableRow
                        android:layout_marginTop="5dp">
                        <TextView
                            android:id="@+id/txt6"
                            android:layout_width="120sp"
                            android:layout_height="wrap_content"
